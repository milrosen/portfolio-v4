<style>
	.bio {
		max-width: 37rem;
		margin-bottom: calc(var(--pad) + 1rem);
		margin-left: calc(var(--pad) + 1rem);
	}
	li {
		list-style: none;
		margin-bottom: 1rem;
		margin-left: calc(var(--pad) + 1rem);
	}
	.grid {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
	}
	a {
		font-size: large;
		transition: color 100ms ease-out;
	}
	h1 {
		margin-left: var(--pad);
		margin-top: 3rem;
	}
	a:hover {
		color: rgba(0, 0, 0, 0)
	}
	a::before {
		transition: color 100ms ease-in;
		content: "â¬¤";
		color: rgba(0, 0, 0, 0);
		position: relative;
		right: -1.2rem
	}
	a:hover::before {
		color: rgba(0, 0, 0, 1)
	}
</style>